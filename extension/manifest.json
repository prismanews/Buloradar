{
  "manifest_version": 3,
  "name": "BuloRadar - Detective de desinformación",
  "version": "1.0.0",
  "description": "Detecta automáticamente si el contenido que estás viendo es un bulo",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "https://api.buloradar.com/*",
    "https://twitter.com/*",
    "https://tiktok.com/*",
    "https://instagram.com/*",
    "https://facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "BuloRadar - Verificar contenido"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
